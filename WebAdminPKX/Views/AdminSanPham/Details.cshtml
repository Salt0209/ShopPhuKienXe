@model Domain.Models.TblSanPham

@{
    ViewData["Title"] = "Details";
}
<div class="page-header">

    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-controller="HomeAdmin" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-controller="AdminSanPham" asp-action="Index">Danh sách sản phẩm</a>
            <span class="breadcrumb-item active">Thông tin sản phẩm: @Model.STenSanPham</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Thông tin sản phẩm: @Model.STenSanPham</h4>
        <div class="table-responsive">
            <table class="product-info-table m-t-20">
                <tbody>
                    <tr>
                        <td>ID:</td>
                        <td class="text-dark font-weight-semibold">@Model.IdSanPham</td>
                    </tr>
                    <tr>
                        <td>Tên sản phẩm:</td>
                        <td>@Model.STenSanPham</td>
                    </tr>
                    <tr>
                        <td>Mô tả:</td>
                        <td>@Model.SMoTa</td>
                    </tr>
                    <tr>
                        <td>Mô tả chi tiết:</td>
                        <td>@Model.SMoTaChiTiet</td>
                    </tr>
                    <tr>
                        <td>Giá bán:</td>
                        <td>@Model.FGiaTien.Value.ToString("#,##0") VND</td>
                    </tr>
                   
                    <tr>
                        <td>Danh mục:</td>
                        <td>@Model.IdDanhMucNavigation.STenDanhMuc</td>
                    </tr>
                    
                   
                    <tr>
                        <td>Hình ảnh:</td>
                        <td>
                            <img width="200px" ; height="200px" src="~/images/products/@Model.SHinhAnh" alt="@Model.SMoTa" />
                        </td>
                    </tr>
                    
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="text-left">
    <a class="btn btn-primary " asp-action="Index"><i class="fas fa-undo m-r-5 fa-lg"></i>Quay lại</a>
</div>