@{
    ViewData["Title"] = "HomeAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@if (!User.Identity.IsAuthenticated)
{
    <div><h3>Chưa đăng nhập. Vui lòng <a href="/AdminLogin/AdminLogin">đăng nhập</a></h3></div>

}
else
{
