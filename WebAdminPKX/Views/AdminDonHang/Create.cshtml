@model Domain.Models.TblDonHang

@{
    ViewData["Title"] = "Create";
}


<div class="page-header">
    <h2 class="header-title">Thêm đơn hàng</h2>
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-controller="AdminDonHang" asp-action="Index">Danh sách đơn hàng</a>

        </nav>
    </div>
</div>

<div class="row">
    <div class="modal-body" style="background-color:#FAEAEA">
        <div class="card">
            <div class="card-body" style="background-color:#FAEAEA">
                <form asp-action="Create">
                    <div class="row">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="IdKhachHang" class="control-label">Mã khách hàng *</label>
                                <select asp-for="IdKhachHang" class="form-control" asp-items="ViewBag.IdKhachHang"></select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="DNgayTao" class="control-label">Ngày mua *</label>
                                <input asp-for="DNgayTao" class="form-control" />
                                <span asp-validation-for="DNgayTao" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="IdTrangThai" class="control-label">Trạng thái đơn hàng *</label>
                                <select asp-for="IdTrangThai" class="form-control" asp-items="ViewBag.IdTrangThai"></select>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="SGhiChu" class="control-label">Ghi chú</label>
                            <input asp-for="SGhiChu" class="form-control" />
                            <span asp-validation-for="SGhiChu" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="SDiaChi" class="control-label">Địa chỉ *</label>
                            <input asp-for="SDiaChi" class="form-control" />
                            <span asp-validation-for="SDiaChi" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="FPhiVanChuyen" class="control-label">Phí vận chuyển</label>
                            <input asp-for="FPhiVanChuyen" class="form-control" />
                            <span asp-validation-for="FPhiVanChuyen" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="FTongTien" class="control-label">Tổng tiền *</label>
                            <input asp-for="FTongTien" class="form-control" />
                            <span asp-validation-for="FTongTien" class="text-danger"></span>
                        </div>
                    </div>
                    <br />
                    <div class="col-md-6">
                        <div class="form-group">
                            <button type="submit" class="btn btn-info  m-r-5"><i class="far fa-save m-r-5 fa-lg"></i>Lưu</button>
                            |
                            <a class="btn btn-warning   m-r-5" asp-action="Index"> <i class="fas fa-undo m-r-5 fa-lg"></i>Quay lại</a>

                        </div>
                    </div>
            </form>
        </div>
    </div>
</div>

