@model Domain.Models.TblKhachHang

@{
    ViewData["Title"] = "Details";
    var tongTienDaMua = ViewBag.TongTienDaMua;
}

<h4>Thông tin khách hàng</h4>
<div class="header-sub-title">
    <a class="btn btn-primary" href="@Url.Action("Create", "AdminDonHang",new {id=Model.IdKhachHang})">
        <i class="fas fa-plus"> Thêm mới đơn hàng</i>
    </a>
</div>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.STenKhachHang)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.STenKhachHang)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SDiaChi)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SDiaChi)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SEmail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SEmail)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SSdt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SSdt)
        </dd>
        <dt class="col-sm-2">
            Tổng tiền đã mua
        </dt>
        <dd class="col-sm-10">
            @(tongTienDaMua.ToString("#,##0")) VND
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdKhachHang">Chỉnh sửa</a> |
    <a asp-action="Index">Trở về</a>
</div>

