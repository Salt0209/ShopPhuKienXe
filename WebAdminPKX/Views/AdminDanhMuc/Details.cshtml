@model Domain.Models.TblDanhMuc

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">

    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-controller="HomeAdmin" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-controller="AdminDanhMuc" asp-action="Index">Danh sách danh mục</a>
            <span class="breadcrumb-item active">Thông tin danh mục: @Model.IdDanhMuc</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Thông tin danh mục: @Model.STenDanhMuc</h4>
        <div class="table-responsive">
            <table class="product-info-table m-t-20">
                <tbody>
                    <tr>
                        <td>ID:</td>
                        <td class="text-dark font-weight-semibold">@Model.IdDanhMuc</td>
                    </tr>
                    <tr>
                        <td>Tên danh mục:</td>
                        <td>@Model.STenDanhMuc</td>
                    </tr>
                    <tr>
                        <td>Mô tả:</td>
                        <td>@Model.SMoTa</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
<div>
    <a class="btn btn-primary btn-sm" asp-action="Index"><i class="fas fa-undo m-r-5 fa-lg"></i>Quay lại</a>
</div>
