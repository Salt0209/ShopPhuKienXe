@model Domain.Models.TblPhieuNhapKho

@{
    ViewData["Title"] = "Details";
    List<TblChiTietPhieuNhapKho> orderDetails = ViewBag.ChiTiet;
    var tong = 0;
}


<!-- Content Wrapper START -->
<div class="main-content">
    <div class="page-header">
        <h2 class="header-title">Chi tiết phiếu nhập kho</h2>
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a asp-controller="AdminPhieuNhapKho" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
                <a class="breadcrumb-item" asp-controller="AdminPhieuNhapKho" asp-action="Index">Danh sách phiếu nhập kho</a>

            </nav>
        </div>
    </div>
    <div class="container">
        <div class="card">
            <div class="card-body">
                <div id="invoice" class="p-h-30">
                    <div class="m-t-15 lh-2">
                        <div class="inline-block">
                            <img class="img-fluid" src="~/assets/images/logo/z5297720385657_5138fcf646f04bd09c7ee25945614dd4.jpg" alt="">
                            <address class="p-l-10">
                                <span class="font-weight-semibold text-dark">PKX store</span><br>
                                <span>Địa chỉ: Hà Trì - Hà Đông - Hà Nội</span><br>
                                <abbr class="text-dark" title="Phone">Liên hệ:</abbr>
                                <span>0123 - 456 - 789</span>
                            </address>
                        </div>
                        <div class="float-right">
                            <h2>CHI TIẾT PHIẾU NHẬP</h2>
                        </div>
                    </div>
                    <div class="row m-t-20 lh-2">
                        <div class="col-sm-9">
                            <h3 class="p-l-10 m-t-10">Nhân viên:</h3>
                            <address class="p-l-10 m-t-10">
                                <span class="font-weight-semibold text-dark">@Model.IdNhanVienNavigation.SHoTen</span><br>
                                <span>Email: @Model.IdNhanVienNavigation.SEmail</span><br>
                                <span>Liên hệ: @Model.IdNhanVienNavigation.SSdt</span>
                            </address>
                        </div>
                        <div class="col-sm-3">
                            <div class="m-t-80">
                                <div class="text-dark text-uppercase d-inline-block">
                                    <span class="font-weight-semibold text-dark">Mã phiếu nhập :</span>
                                </div>
                                <div class="float-right">@Model.IdPhieuNhapKho</div>
                            </div>
                            <div class="text-dark text-uppercase d-inline-block">
                                <span class="font-weight-semibold text-dark">Ngày tạo :</span>
                            </div>
                            <div class="float-right">@Model.DNgaySua</div>
                        </div>
                    </div>
                    <div class="m-t-20">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>STT</th>
                                        <th>Mã sản phẩm</th>
                                        <th>Số lượng</th>
                                        <th>Đơn giá</th>
                                        <th>Tổng tiền</th>
                                        <th>Ghi chú</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (orderDetails != null && orderDetails.Count() > 0)
                                    {
                                        int i = 1;
                                        foreach (var item in orderDetails)
                                        {
                                            string url = "/";
                                            <tr>
                                                <th>@i</th>
                                                <td><a href="/AdminSanPham/Details/@item.IdSanPham">@item.IdSanPham</a></td>
                                                <td>@item.ISoLuongNhap</td>
                                                <td>@item.FDonGiaNhap.ToString("#,##0") VND</td>
                                                <td>@(item.ISoLuongNhap * item.FDonGiaNhap) VND</td>
                                                <td>@item.SGhiChu</td>

                                            </tr>
                                            tong += item.ISoLuongNhap * item.FDonGiaNhap;
                                            i++;
                                        }
                                    }

                                </tbody>
                            </table>
                        </div>
                        <div class="row m-t-30 lh-1-8">
                            <div class="col-sm-12">
                                <div class="float-right text-right">

                                    <h3><span class="font-weight-semibold text-dark">Tổng tiền :</span>@tong VND</h3>
                                </div>
                            </div>
                        </div>
                        <div class="row m-t-30 lh-2">
                            <div class="col-sm-12">
                                <div class="border-bottom p-v-20">
                                    <p class="text-opacity">
                                        <small>
                                            PKX Store cảm ơn quý khách đã ủng hộ sản phẩm của cửa hàng.
                                        </small>
                                    </p>
                                    <p class="text-opacity">
                                        <small>
                                            Quý khách khi nhận được hàng hãy quay clip quá trình mở hàng, để phục vụ trong quá trình sản phẩm có
                                            có sự cố để được hỗ trợ. Shop chỉ hỗ trợ đổi trả hàng khi quý khách cung cấp đủ clip mở hàng.
                                            Nếu sản phẩm lỗi, không đúng sản phẩm shop sẵn sàng đổi trả cho khách hàng. Xin hãy liên hệ với cửa hàng trước khi đánh giá về sản phẩm.
                                            Mọi thông tin liên lạc xin quý khác liên hệ phía bên dưới.
                                        </small>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="row m-v-20">
                            <div class="col-sm-6">
                                <img class="img-fluid text-opacity m-t-5" width="100" src="~/assets/images/logo/logoadmin.jpg" alt="" />
                            </div>
                            <div class="col-sm-6 text-right">
                                <small><span class="font-weight-semibold text-dark">Điện thoại:</span> 0123 - 456 - 789</small>
                                <br>
                                <small>pkxstore@gmail.com</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="text-right">
            <a class="btn btn-primary " asp-action="Index"><i class="fas fa-undo m-r-5 fa-lg"></i>Quay lại</a>
        </div>

    </div>
</div>
<!-- Content Wrapper END -->
<!-- Footer START -->
